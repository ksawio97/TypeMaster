<Page x:Class="TypeMaster.View.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TypeMaster.View"
      xmlns:vm="clr-namespace:TypeMaster.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomeView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="0"
                Content="Play" 
                Command="{Binding NavigateToTypeTestCommand}"/>

        <Button Grid.Column="0"
                Grid.Row="1"
                Content="Scoreboard"
                Command="{Binding NavigateToScoreboardCommand}"/>

        <Button Grid.Column="1"
                Grid.Row="1"
                Content="Quit"
                Command="{Binding QuitCommand}"/>
    </Grid>
</Page>
