<Page x:Class="TypeMaster.View.TypeTestView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TypeMaster.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TypeTestView">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinHeight="40" Margin="20, 20, 20, 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
                Grid.Row="1"
                Grid.Column="1"
                x:Name="WikiTextBlock"
                FontSize="20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                TextWrapping="Wrap"
                TextTrimming ="None"/>

        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            MaxHeight="50"
            FontSize="20"
            MaxLines="1"
            IsEnabled="{Binding IsNotBusy}"
            Text="{Binding UserTypeInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Background="Transparent"/>
    </Grid>
</Page>
