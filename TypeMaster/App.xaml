<Application x:Class="TypeMaster.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TypeMaster" 
             xmlns:viewmodel="clr-namespace:TypeMaster.ViewModel"
             xmlns:view="clr-namespace:TypeMaster.View">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewmodel:HomeViewModel}">
            <view:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewmodel:TypeTestViewModel}">
            <view:TypeTestView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewmodel:ScoreboardViewModel}">
            <view:ScoreboardView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewmodel:PlaymodsViewModel}">
            <view:PlaymodsView/>
        </DataTemplate>
    </Application.Resources>
</Application>
