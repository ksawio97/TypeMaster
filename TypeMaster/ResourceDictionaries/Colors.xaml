    <SolidColorBrush x:Key="TypoColor" Color="#F1C550"/>
    <SolidColorBrush x:Key="CorrectColor" Color="#A1C45A"/>

    <SolidColorBrush x:Key="DarkErrorColor" Color="#FF1700"/>
    <SolidColorBrush x:Key="DarkTypoColor" Color="#FF8E00"/>
    <SolidColorBrush x:Key="DarkCorrectColor" Color="#379237"/>

    <SolidColorBrush x:Key="BackgroundColor" Color="#272537"/>
